<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="500" prefWidth="900" stylesheets="@showorders.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="ShowOrdersController">
    <children>
        <VBox spacing="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="20">
            <!-- Title -->
            <HBox alignment="CENTER">
                <Label styleClass="page-title" text="Orders Page" />
            </HBox>

            <!-- Table -->
            <TableView fx:id="ordersTable" prefHeight="350">
                <columns>
                    <TableColumn fx:id="orderNumberCol" prefWidth="100" text="Order #" />
                    <TableColumn fx:id="parkingSpaceCol" prefWidth="130" text="Parking Space" />
                    <TableColumn fx:id="orderDateCol" prefWidth="140" text="Order Date" />
                    <TableColumn fx:id="confirmationCodeCol" prefWidth="140" text="Confirmation Code" />
                    <TableColumn fx:id="dateOfPlacingAnOrderCol" prefWidth="160" text="Placing Order Date" />
                    <TableColumn fx:id="subscriberIdCol" prefWidth="100" text="Subscriber ID" />
                </columns>
            </TableView>

            <!-- Back Button -->
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Button onAction="#goBack" styleClass="back-button" text="Back" />
            <Button onAction="#updateOrder" mnemonicParsing="false" text="Update Order" />
            </HBox>
        </VBox>
    </children>
</AnchorPane>

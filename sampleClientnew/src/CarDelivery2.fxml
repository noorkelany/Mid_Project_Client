<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<!-- Main layout for Car Delivery screen -->
<BorderPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="CarDeliveryController"
            stylesheets="@CarDelivery.css"
            styleClass="root"
            prefHeight="200.0" prefWidth="550.0">

    <!-- Top blue bar with back button and centered white title -->
    <top>
        <HBox spacing="10" alignment="CENTER_LEFT"
              style="-fx-background-color: #1e3a74; -fx-padding: 12;">
            <children>
                <Button fx:id="btnBack" text="â† Back" onAction="#handleBackToMainPage"
                        styleClass="back-button"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label text="Car Delivery" styleClass="top-bar-title"/>
                <Region HBox.hgrow="ALWAYS"/>
            </children>
        </HBox>
    </top>

    <!-- Form area aligned to the left -->
    <center>
        <VBox spacing="20" alignment="TOP_LEFT" style="-fx-padding: 40 40 40 60;">
            <children>
                <!-- Input field label -->
                <Label text="Subscription Code" styleClass="label"/>

                <!-- Input and button in one row -->
                <HBox spacing="10">
                    <children>
                        <TextField fx:id="subscriptionCodeField" prefWidth="280.0" styleClass="text-field"/>
                        <Button text="Check Code" onAction="#checkCodeClicked" styleClass="button"/>
                    </children>
                </HBox>

                <!-- Output label shown after checking -->
                <Label fx:id="outputLabel" prefWidth="500.0" wrapText="true"
                       visible="false" styleClass="result-label"/>

                <!-- Submit delivery action -->
                <Button fx:id="deliverCarClicked" text="Deliver The Car"
                        onAction="#DeliverCarClicked"
                        prefWidth="200.0" prefHeight="50.0"
                        styleClass="button"
                        visible="false"/>
            </children>
        </VBox>
    </center>
</BorderPane>
